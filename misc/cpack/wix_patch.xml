<CPackWiXPatch>
    <CPackWiXFragment Id="#PRODUCT">
        <DirectoryRef Id="TARGETDIR">
            <Directory Id="ProgramMenuFolder">
                <Directory Id="PROGRAM_MENU_FOLDER" Name="Urbi"/>
            </Directory>
        </DirectoryRef>
        <DirectoryRef Id="PROGRAM_MENU_FOLDER">
            <Component Id="UrbiShortcuts" Guid="26f1f8cb-0739-4a33-b75d-316dee8ac26e">
                <Shortcut Id="UrbiServer"
                          Icon="ProductIcon.ico"
                          Target="[#CM_FP_Runtime.bin.urbi_launch.exe]"
                          WorkingDirectory="CM_DP_Runtime.bin"
                          Name="Urbi Server"
                          Arguments="--start --port=54000"
                />
                <Shortcut Id="UrbiServerInteractive"
                          Icon="ProductIcon.ico"
                          Target="[#CM_FP_Runtime.bin.urbi_launch.exe]"
                          WorkingDirectory="CM_DP_Runtime.bin"
                          Name="Urbi Server Interactive"
                          Arguments="--start --port=54000 -- --interactive"
                />
                <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\[ProductName]" Name="Runtime_installed"
                               Type="integer"
                               Value="1" KeyPath="yes"/>
                <RemoveFolder Id="UrbiRemoveProgramMenuFolder" On="uninstall"/>
            </Component>
        </DirectoryRef>
    </CPackWiXFragment>
    <CPackWiXFragment Id="CM_C_Runtime">
        <ComponentRef Id="UrbiShortcuts"/>
    </CPackWiXFragment>
</CPackWiXPatch>
